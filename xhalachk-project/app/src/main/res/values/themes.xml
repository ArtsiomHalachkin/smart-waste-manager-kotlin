<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SmartWasteBrno" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.CustomSplashScreenTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.SmartWasteBrno</item>
    </style>

    <style name="Theme.AppIntro" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.SmartWasteBrno.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>




</resources>